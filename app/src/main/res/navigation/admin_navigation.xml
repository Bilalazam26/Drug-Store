<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kotlinlearn.drugstore.AdminHomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_admin_home" >
        <action
            android:id="@+id/action_navigation_home_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.kotlinlearn.drugstore.AdminOrdersFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_admin_orders" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.kotlinlearn.drugstore.AdminProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_admin_profile" />
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.kotlinlearn.drugstore.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/navigation_add_product"
        android:name="com.kotlinlearn.drugstore.AdminAddProductFragment"
        android:label="fragment_admin_add_product"
        tools:layout="@layout/fragment_admin_add_product" />
</navigation>